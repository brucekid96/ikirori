<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

  <item>
    <layer-list>
      <item>
        <shape android:shape="rectangle">
          <solid android:color="@android:color/transparent" />
          <padding
            android:left="4dp"
            android:top="4dp"
            android:right="4dp"
            android:bottom="4dp"
            />

          <gradient android:startColor="#ffea03" android:endColor="#f364e619" android:angle="270" />
          <stroke android:width="10px"  android:color="@color/colorPrimary" />
          <corners android:radius="5dp" />
        </shape>
      </item>

      <item

         android:gravity="center|right" app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"/>


    </layer-list>
  </item>
</selector>