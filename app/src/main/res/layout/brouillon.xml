<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/cardView"
  style="@style/CardView.Light"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="8dp"
  android:layout_marginStart="8dp"
  android:layout_marginEnd="8dp"
  app:cardBackgroundColor="@color/colorPrimary"
  app:cardCornerRadius="4dp">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
      android:id="@+id/card_image"
      android:layout_width="match_parent"
      android:layout_height="168dp"
      android:scaleType="centerCrop"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_chainStyle="packed"
      app:srcCompat="@drawable/secondeventpicture"/>
    <TextView
      android:id="@+id/title_id"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:fontFamily="@font/montserrat_bold"
      android:text="Kigingi Summer Comedy"
      android:textColor="@color/colorWhite"
      android:textSize="18sp"
      app:layout_constraintStart_toStartOf="@+id/guideline8"
      app:layout_constraintTop_toBottomOf="@+id/card_image"/>
    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_begin="10dp"/>
    <TextView
      android:id="@+id/calendar_id"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:fontFamily="@font/montserrat_regular"
      android:text="Fri, Jun 28 2019 at 11:23"
      android:textColor="@color/colorWhite"
      android:textSize="14sp"
      app:layout_constraintBottom_toTopOf="@+id/venue_view_id"
      app:layout_constraintStart_toStartOf="@+id/guideline8"
      app:layout_constraintTop_toBottomOf="@+id/title_id"/>
    <TextView
      android:id="@+id/city_view_id"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/montserrat_regular"
      android:text="Bujumbura"
      android:textColor="@color/colorWhite"
      android:textSize="14sp"
      app:layout_constraintEnd_toStartOf="@+id/guideline9"
      app:layout_constraintTop_toTopOf="@+id/calendar_id"/>
    <TextView
      android:id="@+id/analytics"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      app:drawableLeftCompat="@drawable/ic_trending_up_black_24dp"
      android:fontFamily="@font/montserrat_bold"
      android:text="Analytics"
      android:textColor="@color/colorWhite"
      android:textSize="14sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="@+id/guideline8"/>
    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline9"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_end="10dp"/>
    <TextView
      android:id="@+id/edit_event"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      app:drawableLeftCompat="@drawable/ic_edit_black_24dp"
      android:fontFamily="@font/montserrat_bold"
      android:text="Edit"
      android:textColor="@color/colorWhite"
      app:layout_constraintEnd_toStartOf="@+id/more_textview_id"
      app:layout_constraintStart_toEndOf="@+id/analytics"
      app:layout_constraintTop_toTopOf="@+id/analytics"/>
    <TextView
      android:id="@+id/more_textview_id"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:drawableLeftCompat="@drawable/ic_more_vert_black_24dp"
      android:fontFamily="@font/montserrat_bold"
      android:text="More"
      android:textColor="@color/colorWhite"
      app:layout_constraintEnd_toStartOf="@+id/guideline9"
      app:layout_constraintTop_toTopOf="@+id/analytics"/>
    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/venue_view_id"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:fontFamily="@font/montserrat_regular"
      android:text="Avenue Bwiza, Number 36"
      android:textColor="@color/colorWhite"
      app:layout_constraintBottom_toTopOf="@+id/analytics"
      app:layout_constraintStart_toStartOf="@+id/guideline8"
      app:layout_constraintTop_toBottomOf="@+id/calendar_id"/>
    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/place_view_id"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:fontFamily="@font/montserrat_regular"
      android:text="OdÃ©on Palace"
      android:textColor="@color/colorWhite"
      app:layout_constraintBottom_toTopOf="@+id/more_textview_id"
      app:layout_constraintEnd_toStartOf="@+id/guideline9"
      app:layout_constraintTop_toTopOf="@+id/venue_view_id"/>

  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>