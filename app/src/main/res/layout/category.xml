<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">


  <androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar_location"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:fontFamily="@font/montserrat_bold"
    android:minHeight="?attr/actionBarSize"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:title="Define Your Event Location"
    app:titleTextAppearance="@style/Ikirori_TextAppearance_Toolbar"
    app:titleTextColor="@android:color/white" />

  <ScrollView
    android:id="@+id/scrollView_location"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:fillViewport="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/toolbar_location">
    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/scrollview_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/category_guideline_right"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_begin="24dp"/>
  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/category_guideline_left"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_end="24dp"/>
      <TextView
        android:id="@+id/textView8"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:drawableLeftCompat="@drawable/ic_assignment_black_24dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Ticketing"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/category_guideline_left"
        app:layout_constraintStart_toStartOf="@+id/category_guideline_right"
        app:layout_constraintTop_toTopOf="parent"/>
      <Spinner
        android:id="@+id/spinner_ticket"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:background="@drawable/gradient_spinner"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/category_guideline_left"
        app:layout_constraintStart_toStartOf="@+id/category_guideline_right"
        app:layout_constraintTop_toBottomOf="@+id/textView8"/>
      <TextView
        android:id="@+id/textView10"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:drawableLeftCompat="@drawable/ic_add_black_24dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Category"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/category_guideline_left"
        app:layout_constraintStart_toStartOf="@+id/category_guideline_right"
        app:layout_constraintTop_toBottomOf="@+id/spinner_ticket"/>

      <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        app:background="@drawable/gradient_spinner"
        app:layout_constraintEnd_toStartOf="@+id/category_guideline_left"
        app:layout_constraintStart_toStartOf="@+id/category_guideline_right"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:visibility="visible"/>
      <TextView
        android:id="@+id/textView6"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:drawableLeftCompat="@drawable/ic_lock_black_24dp"
        android:text="Privacy"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/category_guideline_left"
        app:layout_constraintStart_toStartOf="@+id/category_guideline_right"
        app:layout_constraintTop_toBottomOf="@+id/spinner_category"/>
      <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/category_guideline_right"
        app:layout_constraintTop_toBottomOf="@+id/textView6">
        <RadioButton
          android:id="@+id/public_radioButton"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:checked="true"
          android:fontFamily="@font/montserrat_regular"
          android:text="Public"
          android:textColor="@color/colorPrimary"/>
        <RadioButton
          android:id="@+id/private_radioButton"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:fontFamily="@font/montserrat_regular"
          android:text="Private"
          android:textColor="@color/colorPrimary"/>
      </RadioGroup>
      <Button
        android:id="@+id/save_event_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Save"
        app:layout_constraintEnd_toStartOf="@+id/category_guideline_left"
        app:layout_constraintStart_toStartOf="@+id/category_guideline_right"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>